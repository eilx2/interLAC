<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mun.minh_minhh.interlac">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashPage"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EventMain" />
        <activity android:name=".BasicActivity" />
        <activity android:name=".CameraMain" />
        <activity android:name=".ChatMain" />
        <activity android:name=".HomePage" />
        <activity
            android:name=".SettingsMain"
            android:label="@string/title_activity_settings_main"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ArtworkViewMain"
            android:label="@string/title_activity_artwork_view_main"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>